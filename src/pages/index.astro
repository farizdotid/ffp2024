---
import DesktopHeader from "../layout/DesktopHeader.astro";
import Hero from "../layout/Hero.astro";
import MobileHeader from "../layout/MobileHeader";
import Blobs from "../components/Blobs.astro";
import "../global/styles.css";
import Footer from "../layout/Footer.astro";
import Terms from "../layout/Terms.astro";
import Summary from "../components/Summary.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="shortcut icon" href="~/assets/favicons/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="mask-icon" href="/favicon.svg" color="#8D46E7" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
	
    <title>FFP 2024 - Ekraf Purwakarta</title>

    <meta
      name="description"
      content="Festival Film Pesantren & Pasar Kreatif Purwakarta 2024"
    />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="FFP 2024" />
    <meta
      property="og:description"
      content="Festival Film Pesantren & Pasar Kreatif Purwakarta 2024"
    />
	<meta property="og:url" content="https://ffp2024.ekrafpurwakarta.com/">
	<meta property="og:site_name" content="FFP 2024">
  </head>
  <body>
    <div
      class="bg-zinc-800 text-neutral-50 relative min-h-screen font-popins overflow-hidden"
    >
      <Blobs />
      <div class="backdrop-blur-[160px]">
        <div class="max-w-[1200px] mx-auto px-4">
          <section>
            <div class="lg:hidden">
              <MobileHeader client:load />
            </div>
            <div class="hidden lg:block">
              <DesktopHeader />
            </div>
            <Hero />
            <Summary />
          </section>
          <Terms />
          <Footer />
        </div>
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/65a19dc040.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
